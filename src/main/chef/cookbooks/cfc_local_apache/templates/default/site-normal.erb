ProxyRequests Off

<VirtualHost *:80>
        ServerName localhost
        ServerAdmin root@localhost
        ProxyPass <%= @prefix %> http://127.0.0.1:<%= @port %><%= @prefix %>
        ProxyPassReverse <%= @prefix %> http://127.0.0.1:<%= @port %><%= @prefix %>
</VirtualHost>
<VirtualHost *:443>
        ServerName localhost
        ServerAdmin root@localhost

        SSLEngine on
        SSLCertificateFile /etc/httpd/certs/self.crt
        SSLCertificateKeyFile /etc/httpd/certs/self.key
        #SSLCertificateChainFile /etc/httpd/certs/go_daddy_bundle.crt

        ProxyPass <%= @prefix %> http://127.0.0.1:<%= @port %><%= @prefix %>
        ProxyPassReverse <%= @prefix %> http://127.0.0.1:<%= @port %><%= @prefix %>
</VirtualHost>
